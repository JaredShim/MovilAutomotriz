<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.movilautomotriz">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovilAutomotriz"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuMain"/>
        <activity
            android:name=".createOrUpdateCar"
            android:exported="false" />
        <activity
            android:name=".findCar"
            android:exported="false" />
        <activity
            android:name=".Generals"
            android:exported="false" />
        <activity
            android:name=".Carroceria"
            android:exported="false" />
        <activity
            android:name=".GeneralesMotor"
            android:exported="false" />
        <activity
            android:name=".Interiores"
            android:exported="false" />
        <activity
            android:name=".SistemasMotor"
            android:exported="false" />
        <activity
            android:name=".Automotrices"
            android:exported="false" />
    </application>

</manifest>